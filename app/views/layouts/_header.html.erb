<div class="header">
  <% if user_signed_in? %>
    <p class="greeting"><%= current_user.name %>さん、こんにちは！</p>
    <div class="nav-links">
      <%= link_to 'Top', root_path %> |
      <%= link_to 'Diary', diaries_path %> |
      <%= link_to 'Event', events_path %> |
      <%= link_to 'Mypage', mypage_users_path %> |
      <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
      <%= form_with url: search_path, method: :get, local: true do %>
        <div>
          <%= label_tag :query, "検索ワード" %>
          <%= text_field_tag :query, params[:query] %>
        </div>
        <div>
          <%= label_tag :category, "検索対象" %>
          <%= select_tag :category, options_for_select([["ゲーム", "games"], ["日記", "diaries"], ["ユーザー", "users"]], params[:category]) %>
        </div>
        <div>
          <%= label_tag :match_type, "検索方法" %>
          <%= select_tag :match_type, options_for_select([["部分一致", "partial"], ["完全一致", "exact"]], params[:match_type]) %>
        </div>
        <%= submit_tag "検索" %>
      <% end %>

    </div>
  <% else %> 
    <div class="nav-links">
      <%= link_to 'Top', root_path %> |
      <%= link_to 'Diary', diaries_path %> |
      <%= link_to 'Event', events_path %> |
      <%= link_to 'Log in', new_user_session_path %> |
      <%= link_to 'Sign up', new_user_registration_path %>
    </div>
  <% end %>
</div>