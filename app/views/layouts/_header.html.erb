<div class="header <%= 'user-logged-in' if user_signed_in? %> <%= 'admin-logged-in' if admin_signed_in? %>">
  <%# ユーザーログイン時 %>
  <% if user_signed_in? %>
  
    <p class="greeting"><%= current_user.name %>さん、こんにちは！</p>
    <div class="nav-links">
      <%= link_to 'Top', root_path %> |
      <%= link_to 'Game', games_path %> |
      <%= link_to 'Diary', diaries_path %> |
      <%= link_to 'Event', events_path %> |
      <%= link_to 'Group', groups_path %> |
      <%= link_to 'Mypage', mypage_users_path %> |
      <%= link_to 'User', users_path %> |
      <%= button_to 'Log out', destroy_user_session_path, method: :delete %>
      <%= form_with url: search_path, method: :get, local: true do %>
        <div>
          <%= label_tag :query, "検索ワード" %>
          <%= text_field_tag :query, params[:query] %>
          <%= label_tag :category, "検索対象" %>
          <%= select_tag :category, options_for_select([["ゲーム", "games"], ["日記", "diaries"], ["ユーザー", "users"]], params[:category]) %>
          <%= label_tag :match_type, "検索方法" %>
          <%= select_tag :match_type, options_for_select([["部分一致", "partial"], ["完全一致", "exact"]], params[:match_type]) %>
        </div>
        <%= submit_tag "検索" %>
      <% end %>
    </div>
  <%# 管理者ログイン時 %>
  <% elsif admin_signed_in? %>
    <p class="greeting"><%= current_admin.email %>さん、こんにちは！</p>
    <div class="nav-links">
      <%= link_to 'Admin Top', admin_root_path %> |
      <%= link_to 'Diary', admin_diaries_path %> |
      <%= link_to 'Event', admin_events_path %> |
      <%= link_to 'User', admin_users_path %> |
      <%= link_to 'Group', admin_groups_path %> |
      <%= link_to 'Game', admin_games_path %> |
      <%= link_to 'Genre', admin_genres_path %> |
      <%= button_to 'Log out', destroy_admin_session_path, method: :delete %>
    </div>
  <%# 非ログイン時 %>
  <% else %> 
    <div class="nav-links">
      <%= link_to 'Top', root_path %> |
      <%= link_to 'Diary', diaries_path %> |
      <%= link_to 'Event', events_path %> |
      <%= link_to 'Group', groups_path %> |
      <%= link_to 'Log in', new_user_session_path %> |
      <%= link_to 'Sign up', new_user_registration_path %>
    </div>
  <% end %>
</div>