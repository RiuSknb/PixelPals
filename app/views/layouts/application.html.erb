<!DOCTYPE html>
<html>
  <head>
    <title>Pixelpals</title>
    <link rel="stylesheet" media="all" href="/assets/application.css">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'admin_comments', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'admin_diaries', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'admin_events', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'admin_users', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'public_group_member_invite', defer: true %>
  </head>

  <body style="background-image: url(<%= asset_path(@background_image || 'cat_bl.jpg') %>);
              background-size: cover;
              background-position: center;
              background-repeat: no-repeat;
              background-attachment: fixed;
              height: 100%;
              margin: 0;
              background-color: rgba(255, 255, 255, 0.5);
              background-blend-mode: lighten;">
    <div class="page-container">
      <%= render 'layouts/header' %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class="content">
        <%= yield %>
      </div>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>