<h1>ゲーム一覧</h1>
<div class='container'>
  <% @genres.each do |genre| %>
    <h2><%= genre.name %></h2>
    <ul class="game-list">
      <% genre.games.each do |game| %>
        <li class="game-item">
          <%= link_to game.name, game_path(game), class: "game-link" %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>