<h1>投稿の編集</h1>

<div class='container'>
  <%= form_with(model: @diary, local: true) do |form| %>
    <% if @diary.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @diary.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, 'タイトル' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :body, '本文' %>
      <%= form.text_area :body, class: 'form-control', rows: 5 %>
    </div>
    <%= form.submit '更新', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to '削除', diary_path(@diary), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
  <%= link_to '詳細に戻る', diary_path(@diary), class: 'btn btn-secondary' %>
  <%= link_to '日記一覧に戻る', diaries_path, class: 'btn btn-secondary' %>
</div>