<div class="mypage">
  <h1><%= @user.name %>さんのマイページ</h1>

  <div class="profile">
    <h2>プロフィール情報</h2>
    <p><strong>メールアドレス:</strong> <%= @user.email %></p>
    <p><strong>登録日:</strong> <%= @user.created_at.strftime('%Y/%m/%d') %></p>
    <!-- 必要な項目を追加 -->
  </div>

  <div class="posts">
    <h2>投稿一覧</h2>
    <% if @diaries.any? %>
      <% @diaries.each do |diary| %>
        <div class="post">
          <h3><%= link_to diary.title, diary_path(diary) %></h3>
          <p><%= truncate(diary.body, length: 100) %></p>
        </div>
      <% end %>
    <% else %>
      <p>まだ投稿はありません</p>
    <% end %>
  </div>
</div>