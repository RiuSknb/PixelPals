<%= form_with model: @game, url: admin_games_path, method: :post do |f| %>
  <div class="form-container">
    <% if @game.errors.any? %>
      <div class="error_messages">
        <ul>
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="game-form">
      <%= f.label :genre_id, "ジャンルを選択" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "ジャンルを選んでください", class: "form-input" %>
      <%= f.text_field :name, placeholder: "ゲーム名", class: "form-input" %>
    </div>

    <%= f.submit "投稿する", class: 'submit-button' %>
  </div>
<% end %>
