<h1>日記の編集（管理者用）</h1>

<div class='container'>
  <%= form_with(model: @diary, url: admin_diary_path(@diary), local: true) do |form| %>
    <% if @diary.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @diary.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, 'タイトル' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :body, '内容' %>
      <%= form.text_area :body, class: 'form-control', rows: 5 %>
    </div>

    <%= form.submit '更新', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to '詳細に戻る', admin_diary_path(@diary), class: 'btn btn-secondary' %>
  <%= link_to 'イベント一覧に戻る', admin_diaries_path, class: 'btn btn-secondary' %>
</div>